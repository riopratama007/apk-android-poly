<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueIce"
    tools:context=".ui.fragment.ads.AddSponsorAdsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            app:navigationIcon="@drawable/ic_round_arrow_back_primary"
            app:title="@string/add_sponsor_ads" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:scaleType="fitXY"
                android:src="@drawable/ads_sponsor_ad"/>

            <LinearLayout
                android:padding="@dimen/dimens_medium"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimens_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pasang Lebih Banyak Iklan Kamu"
                    style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimens_small"
                    android:gravity="center_vertical"
                    android:text="Pasang lebih banyak Iklan &amp; penjualan meningkat"
                    style="@style/TextAppearance.MdcTypographyStyles.Body2"
                    app:drawableStartCompat="@drawable/ic_check" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimens_small"
                    android:gravity="center_vertical"
                    android:text="Paket tersedia selama 30 hari"
                    style="@style/TextAppearance.MdcTypographyStyles.Body2"
                    app:drawableStartCompat="@drawable/ic_check" />

            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/dimens_medium"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimens_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pasang Lebih Banyak Iklan &amp; Auto Profit"
                    style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimens_small"
                    android:gravity="center_vertical"
                    android:text="Pasang lebih banyak Iklan"
                    style="@style/TextAppearance.MdcTypographyStyles.Body2"
                    app:drawableStartCompat="@drawable/ic_check" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimens_small"
                    android:gravity="center_vertical"
                    android:text="Paket tersedia selama 30 hari"
                    style="@style/TextAppearance.MdcTypographyStyles.Body2"
                    app:drawableStartCompat="@drawable/ic_check" />

            </LinearLayout>

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    style="@style/AppTheme.Toolbar.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@color/white"
                    app:title="@string/add_content_creative_ads" />

            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:padding="@dimen/dimens_medium"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimens_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Iklan Dalam Video"
                    style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimens_small"
                    android:gravity="center_vertical"
                    android:text="Pasang lebih banyak Iklan &amp; penjualan meningkat"
                    style="@style/TextAppearance.MdcTypographyStyles.Body2"
                    app:drawableStartCompat="@drawable/ic_check" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimens_small"
                    android:gravity="center_vertical"
                    android:text="Paket tersedia selama 30 hari"
                    style="@style/TextAppearance.MdcTypographyStyles.Body2"
                    app:drawableStartCompat="@drawable/ic_check" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimens_small"
                    android:gravity="center_vertical"
                    android:text="Iklan di Story / Video Talent"
                    style="@style/TextAppearance.MdcTypographyStyles.Body2"
                    app:drawableStartCompat="@drawable/ic_check" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimens_small"
                    android:gravity="center_vertical"
                    android:text="Jangkauan Iklan Penggemar Talent"
                    style="@style/TextAppearance.MdcTypographyStyles.Body2"
                    app:drawableStartCompat="@drawable/ic_check" />

            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/dimens_medium"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimens_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/dimens_small">

                    <LinearLayout
                        android:padding="@dimen/dimens_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            style="@style/TextAppearance.MdcTypographyStyles.Body2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100 - 1000 Selly"/>

                        <TextView
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dimens_small"
                            android:gravity="center_vertical"
                            android:text="Rp100.000/bulan"
                            style="@style/TextAppearance.MdcTypographyStyles.Body1" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/dimens_small">

                    <LinearLayout
                        android:padding="@dimen/dimens_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            style="@style/TextAppearance.MdcTypographyStyles.Body2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000 - 5000 Selly"/>

                        <TextView
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dimens_small"
                            android:gravity="center_vertical"
                            android:text="Rp150.000/bulan"
                            style="@style/TextAppearance.MdcTypographyStyles.Body1" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/dimens_small">

                    <LinearLayout
                        android:padding="@dimen/dimens_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            style="@style/TextAppearance.MdcTypographyStyles.Body2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100 Selly"/>

                        <TextView
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dimens_small"
                            android:gravity="center_vertical"
                            android:text="Rp50.000/bulan"
                            style="@style/TextAppearance.MdcTypographyStyles.Body1" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>